delegation:
    person.$x?
    person.$y?
    goal.$z?
    actions.$a?

    delegate $x -> $y:
        actions.$a
        goal.$z
    end

end
failure:

    try:
        Î»do $x $action
    handle failure.$x:
        $x.a? -> retry
        $x.b? -> break
        $x.c? -> timeout
    end

end
// Aleatory
indeterminacy:
    rng.$x?
    actions.$y?

    vary with $x:
        $y
    end
end
interruption:
    actions.$x.$y.$z?

    do:
        resume
        $x
        $y | pause
        $z
    end
end
observable:
    actions.$x.$y.$z?

    do:
        $x | observe
        $y | secret
        $z | observe

    end
end
revocable:

end
